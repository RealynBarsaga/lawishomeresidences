RewriteEngine On

# Block direct access to login.php
RewriteCond %{THE_REQUEST} \ /admin/login\.php [NC]
RewriteCond %{HTTP_REFERER} !^https://lawishomeresidences\.com/admin [NC]
RewriteRule ^ - [F,L]

# Redirect /admin to login.php with the pages=login parameter
RewriteRule ^admin$ /admin/login.php?pages=login [L,QSA]