RewriteEngine On
RewriteBase /

# Redirect root to login.php
RewriteRule ^$ login.php [L]

# Redirect to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Block direct access to login.php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /login\.php\ HTTP/ [NC]
RewriteRule ^login\.php$ / [R=403,L]

# Allow access only through GET and POST methods
RewriteCond %{REQUEST_METHOD} !^(GET|POST)$
RewriteRule ^login\.php$ - [R=405,L]

# Security headers (optional)
Header set Content-Security-Policy "default-src 'self'"
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "DENY"
Header set X-XSS-Protection "1; mode=block"
Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
