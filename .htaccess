RewriteEngine On
RewriteBase /

# Redirect root to login.php while keeping URL clean
RewriteRule ^$ login.php [L]

# Block direct access to login.php if accessed directly
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /login\.php\ HTTP/ [NC]
RewriteRule ^login\.php$ / [R=302,L]

# Prevent directory listings
Options -Indexes

# Block access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|env)$">
    Require all denied
</FilesMatch>

# Prevent access to PHP files except login.php
<FilesMatch "\.php$">
    SetEnvIf Request_URI "^/login\.php$" allow_login
    Require all denied
    Require env allow_login
</FilesMatch>

# Add security headers
Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "DENY"
Header set Content-Security-Policy "default-src 'self'"

# Restrict access to certain IPs
<RequireAll>
    Require all denied
    Require ip 119.93.219.135  # Change this to your allowed IP
</RequireAll>
